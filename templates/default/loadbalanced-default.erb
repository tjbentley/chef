
probe main{
  .url = "/";
  .timeout = <%= node['varnish']['probe_timeout'] %>;
  .interval = 2s;
  .window = 5;
  .threshold = 3;
}

backend web1{
  .host = "<%= node['varnish']['backend_host1'] %>";
  .port = "<%= node['varnish']['backend_host1_port'] %>";
  .probe = main;
}

backend web2{
  .host = "<%= node['varnish']['backend_host2'] %>";
  .port = "<%= node['varnish']['backend_host2_port'] %>";
  .probe = main;
}

#director dr1 round-robin{
